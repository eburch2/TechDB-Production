<div class="login">
	<div class="container">
		<div class="form">

      <h1>Log in</h1>
			
	<%= form_for(:session, url: login_path) do |f| %> 
	 <%=  f.email_field :email, :placeholder => "Email", :size => 20, :style=>"background-color : #000"%>
	 <%=  f.password_field :password, :placeholder => "Password", :size => 20, :style=>"background-color : #000"%>
  	<%= f.submit "Log in", class: "btn-submit", :style => "background-color : #000" %>
<% end %>
		
    </div>
	</div>
</div>

